<% layout("/layouts/boilerPlate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Create a New Listing</h3>
                <form method="post" action="/listing">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" placeholder="enter title" type="text" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" class="form-control"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image url</label>
                        <input name="listing[image]" class="form-control" placeholder="enter image URL/Link">
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="listing[price]" class="form-control" placeholder="enter price" type="number">
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input name="listing[country]" class="form-control" placeholder="enter country" type="text">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">location</label>
                        <input name="listing[location]" class="form-control" placeholder="enter location" type="text">
                    </div>
                    <button class="btn btn-dark mt-3 add-btn">Add</button>
                </form>
            </div>
        </div>
    </body>
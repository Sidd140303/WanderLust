<% layout("/layouts/boilerPlate") %>


    <div class="row">
        <div class="col-8 offset-2"><br><br>
            <h3>Edit Your Listing</h3>
            <form method="post" novalidate class="needs-validation" action="/listing/<%=editListing._id%>?_method=PUT">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" required class="form-control" value="<%=editListing.title%>"
                        type="text">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Enter a valid value!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">description</label>
                    <textarea name="listing[description]" required
                        class="form-control"><%=editListing.description%></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">image</label>
                    <input name="listing[image][url]" required class="form-control" value="<%=editListing.image.url%>">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Enter a valid value!
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">price</label>
                        <input name="listing[price]" required class="form-control" value="<%=editListing.price%>"
                            type="number">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Enter a valid value!
                        </div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">country</label>
                        <input name="listing[country]" required class="form-control" value="<%=editListing.country%>"
                            type="text">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Enter a valid value!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">location</label>
                    <input name="listing[location]" required class="form-control" value="<%=editListing.location%>"
                        type="text">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Enter a valid value!
                    </div>
                </div>
                <button class="btn btn-dark mt-3 add-btn">Edit</button>
            </form><br><br>
        </div>
    </div>